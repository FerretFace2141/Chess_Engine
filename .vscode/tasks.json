{
    "tasks": [
        {   
            "label": "Debug build",
            "type": "cppbuild",
            
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",

                "-g",

                "-I${workspaceFolder}\\Graphics\\Headers",
                "-I${workspaceFolder}\\Graphics\\Dependencies\\Include",
                "-L${workspaceFolder}\\Graphics\\Dependencies\\Lib",

                "${workspaceFolder}\\Graphics\\Source\\*.cpp",
                "-o",
                "${workspaceFolder}\\Graphics\\main.exe",

                "-lglfw3dll",
                "-lglew32",
                "-lopengl32",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {   
            "label": "Release build",
            "type": "cppbuild",
            
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",

                "-mwindows",

                "-I${workspaceFolder}\\Graphics\\Headers",
                "-I${workspaceFolder}\\Graphics\\Dependencies\\Include",
                "-L${workspaceFolder}\\Graphics\\Dependencies\\Lib",

                "${workspaceFolder}\\Graphics\\Source\\*.cpp",
                "-o",
                "${workspaceFolder}\\Graphics\\main.exe",

                "-lglfw3dll",
                "-lglew32",
                "-lopengl32",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
        }
    ],
    "version": "2.0.0"
}